<?xml version="1.0"?>
<Actions>
    <Action id="set_camera_enabled" deviceFilter="self.spyCamera">
        <Name>Enable Camera</Name>
        <CallbackMethod>set_camera_enabled_action</CallbackMethod>
        <ConfigUI>
            <Field id="camera_enable" type="menu">
                <Label>Enable Camera:</Label>
        		<List>
        			<Option value="true">True</Option>
        			<Option value="false">False</Option>
        		</List>
            </Field>
        </ConfigUI>
    </Action>
    <Action id="set_arm_mode" deviceFilter="self.spyCamera">
        <Name>Set Camera Mode</Name>
        <CallbackMethod>set_arm_mode_action</CallbackMethod>
        <ConfigUI>
            <Field id="camera_mode" type="menu">
                <Label>Camera Mode:</Label>
        		<List>
        			<Option value="A">Action</Option>
        			<Option value="C">Continuous</Option>
        			<Option value="M">On Motion</Option>
        		</List>
            </Field>
            <Field id="enabled" type="menu">
                <Label>Enabled:</Label>
        		<List>
        			<Option value="true">True</Option>
        			<Option value="false">False</Option>
        		</List>
            </Field>
        </ConfigUI>
    </Action>
