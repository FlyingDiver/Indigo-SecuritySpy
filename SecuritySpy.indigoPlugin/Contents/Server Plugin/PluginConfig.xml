<?xml version="1.0"?>
<PluginConfig>
	<SupportURL>https://github.com/FlyingDiver/Indigo-SecuritySpy/issues</SupportURL>
	<Field id="update_frequency" type="textfield" defaultValue="1">
        <Label>Update device status frequency (minutes):</Label>
    </Field>
    <Field id="statusNote" type="label" fontSize="small" fontColor="darkgray">
        <Label>Minimum update interval is 1 minute.</Label>
    </Field>
    <Field id="sep2" type="separator"/>
	<Field id="log_level" type="menu" defaultValue="10">
		<Label>Event Logging Level:</Label>
		<List>
			<Option value="5">Extra Debugging Messages</Option>
			<Option value="10">Debugging Messages</Option>
			<Option value="20">Informational Messages</Option>
			<Option value="30">Warning Messages</Option>
			<Option value="40">Error Messages</Option>
			<Option value="50">Critical Errors Only</Option>
		</List>
	</Field>
</PluginConfig>
